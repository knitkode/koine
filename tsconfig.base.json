{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": false,
    "allowJs": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "target": "es5",
    "module": "esnext",
    "declaration": true, // this is important for dual packages compiled with @nx/js:tsc
    "removeComments": true, // this would not be necessary when using @nx/js:swc rather than @nx/js:tsc
    "lib": ["es2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "preserveSymlinks": true, // this appears to be needed after having switched to pnpm
    "baseUrl": ".",
    "paths": {
      "@koine/api": ["packages/api/index.ts"],
      "@koine/api/*": ["packages/api/*"],
      "@koine/browser": ["packages/browser/index.ts"],
      "@koine/browser/*": ["packages/browser/*"],
      "@koine/dom": ["packages/dom/index.ts"],
      "@koine/dom/*": ["packages/dom/*"],
      "@koine/next": ["packages/next/index.ts"],
      "@koine/next/*": ["packages/next/*"],
      "@koine/react": ["packages/react/index.ts"],
      "@koine/react/*": ["packages/react/*"],
      "@koine/stories": ["packages/stories/src/index.ts"],
      "@koine/stories/*": ["packages/stories/src/*"],
      "@koine/utils": ["packages/utils/index.ts"],
      "@koine/utils/*": ["packages/utils/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
