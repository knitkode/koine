{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": false,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ESNext",
    "module": "ESNext",
    "lib": [
      "es2020",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "allowJs": false,
    "downlevelIteration": true,
    "removeComments": false,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noEmitHelpers": true,
    "preserveSymlinks": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "resolveJsonModule": true,
    "stripInternal": true,
    "baseUrl": ".",
    "paths": {
      "@koine/api": [
        "packages/api/src/index.ts"
      ],
      "@koine/api/next": [
        "packages/api/src/next.ts"
      ],
      "@koine/api/swr": [
        "packages/api/src/swr.ts"
      ],
      "@koine/api/swr-mutation": [
        "packages/api/src/swr-mutation.ts"
      ],
      "@koine/browser": [
        "packages/browser/index.ts"
      ],
      "@koine/dom": [
        "packages/dom/index.ts"
      ],
      "@koine/i18n": [
        "packages/i18n/index.ts"
      ],
      "@koine/i18n/compiler": [
        "packages/i18n/compiler.ts"
      ],
      "@koine/i18n/next": [
        "packages/i18n/next.ts"
      ],
      "@koine/i18n/types": [
        "packages/i18n/types.ts"
      ],
      "@koine/next": [
        "packages/next/index.ts"
      ],
      "@koine/next/12": [
        "packages/next/12.ts"
      ],
      "@koine/next/config": [
        "packages/next/config.ts"
      ],
      "@koine/node": [
        "packages/node/index.ts"
      ],
      "@koine/node/jest": [
        "packages/node/jest.ts"
      ],
      "@koine/node/swc": [
        "packages/node/swc.ts"
      ],
      "@koine/nx": [
        "packages/nx/src/index.ts"
      ],
      "@koine/react": [
        "packages/react/index.ts"
      ],
      "@koine/react/calendar": [
        "packages/react/calendar.ts"
      ],
      "@koine/react/forms": [
        "packages/react/forms.ts"
      ],
      "@koine/stories": [
        "packages/stories/src/index.ts"
      ],
      "@koine/utils": [
        "packages/utils/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
