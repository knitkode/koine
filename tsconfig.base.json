{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": false,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "module": "esnext",
    "lib": ["es2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "allowJs": false,
    "downlevelIteration": true,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noEmitHelpers": true,
    "preserveSymlinks": true,
    "baseUrl": ".",
    "paths": {
      "@koine/api": ["packages/api/src/index.ts"],
      "@koine/api/next": ["packages/api/src/next.ts"],
      "@koine/api/swr": ["packages/api/src/swr.ts"],
      "@koine/browser": ["packages/browser/index.ts"],
      "@koine/dom": ["packages/dom/index.ts"],
      "@koine/i18n": ["packages/i18n/index.ts"],
      "@koine/i18n/*": ["packages/i18n/*"],
      "@koine/next": ["packages/next/index.ts"],
      "@koine/next/12": ["packages/next/12.ts"],
      "@koine/next/config": ["packages/next/config.ts"],
      "@koine/node": ["packages/node/index.ts"],
      "@koine/node/*": ["packages/node/*"],
      "@koine/react": ["packages/react/index.ts"],
      "@koine/react/calendar": ["packages/react/calendar.ts"],
      "@koine/react/forms": ["packages/react/forms.ts"],
      "@koine/stories": ["packages/stories/src/index.ts"],
      "@koine/utils": ["packages/utils/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
