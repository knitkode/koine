{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": false,
    "allowJs": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "target": "es5",
    "module": "esnext",
    "lib": ["es2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "declaration": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@koine/next": ["packages/next/index.ts"],
      "@koine/react": ["packages/react/index.ts"],
      "@koine/stories": ["packages/stories/src/index.ts"],
      "@koine/utils": ["packages/utils/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
