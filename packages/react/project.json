{
  "name": "react",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/react",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx run react:build-esm",
          "pnpm dev postbuild react --ext --esm"
        ],
        "parallel": false
      }
    },
    "build-esm": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/react/esm",
        "tsConfig": "packages/react/tsconfig.lib.json",
        "main": "packages/react/index.ts",
        "assets": ["packages/react/*.md", "packages/react/*.d.ts"]
      }
    },
    "build-cjs": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/react/cjs",
        "tsConfig": "packages/react/tsconfig.lib-cjs.json",
        "main": "packages/react/index.ts"
      }
    },
    "build-swc": {
      "executor": "@nx/js:swc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/react",
        "tsConfig": "packages/react/tsconfig.lib.json",
        "main": "packages/react/index.ts",
        "assets": ["packages/react/*.md", "packages/react/*.d.ts"]
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "packages/react/**/*.{ts,tsx,js,jsx}",
          "packages/react/package.json"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/packages/react"],
      "options": {
        "jestConfig": "packages/react/jest.config.js",
        "passWithNoTests": true
      }
    },
    "storybook": {
      "executor": "@nx/storybook:storybook",
      "options": {
        "uiFramework": "@storybook/react",
        "port": 4400,
        "config": {
          "configFolder": "packages/react/.storybook"
        }
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "storybook-build": {
      "executor": "@nx/storybook:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "uiFramework": "@storybook/react",
        "outputPath": "dist/storybook/react",
        "config": {
          "configFolder": "packages/react/.storybook"
        }
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    }
  }
}
