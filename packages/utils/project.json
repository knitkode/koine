{
  "name": "utils",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/utils",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/rollup:rollup",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/utils",
        "tsConfig": "packages/utils/tsconfig.lib.json",
        "project": "packages/utils/package.json",
        "main": "packages/utils/index.ts",
        "assets": [
          {
            "input": "packages/utils",
            "glob": "/*.{md,.d.ts}",
            "output": "./"
          }
        ],
        "generateExportsField": true,
        "skipTypeCheck": false,
        "external": "all",
        "format": ["cjs", "esm"],
        "compiler": "swc",
        "deleteOutputPath": true
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "packages/utils/**/*.ts",
          "packages/utils/package.json"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/packages/utils"],
      "options": {
        "jestConfig": "packages/utils/jest.config.js",
        "passWithNoTests": true
      }
    }
  }
}
