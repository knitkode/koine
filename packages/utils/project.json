{
  "name": "utils",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/utils",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx run utils:build-esm",
          "nx run utils:build-cjs",
          "pnpm dev postbuild utils --ext --esm --cjs"
        ],
        "parallel": false
      }
    },
    "build-esm": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/utils/esm",
        "tsConfig": "packages/utils/tsconfig.lib.json",
        "main": "packages/utils/index.ts",
        "assets": ["packages/utils/*.md", "packages/utils/*.d.ts"]
      }
    },
    "build-cjs": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/utils/cjs",
        "tsConfig": "packages/utils/tsconfig.lib-cjs.json",
        "main": "packages/utils/index.ts"
      }
    },
    "build-swc": {
      "executor": "@nx/js:swc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/utils",
        "tsConfig": "packages/utils/tsconfig.lib.json",
        "swcrc": "packages/utils/.swcrc",
        "main": "packages/utils/index.ts",
        "assets": ["packages/utils/*.md", "packages/utils/*.d.ts"]
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "packages/utils/**/*.ts",
          "packages/utils/package.json"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/packages/utils"],
      "options": {
        "jestConfig": "packages/utils/jest.config.js",
        "passWithNoTests": true
      }
    }
  }
}
