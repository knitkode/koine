{
  "name": "utils",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/utils",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "./tools/executors/build:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "format": ["cjs", "esm"],
        "outputPath": "dist/packages/utils",
        "tsConfig": "packages/utils/tsconfig.lib.json",
        "main": "packages/utils/index.ts",
        "assets": ["packages/utils/*.md", "packages/utils/*.d.ts"]
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/utils/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["coverage/packages/utils"],
      "options": {
        "jestConfig": "packages/utils/jest.config.js",
        "passWithNoTests": true
      }
    }
  }
}
