{
  "extends": "../../tsconfig.base.json",
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "types": ["node"],
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    // for @vercel/ncc:
    "rootDir": "../../",
    "baseUrl": "../../",
    "paths": {
      "@koine/i18n": ["packages/i18n/index.ts"],
      "@koine/i18n/generate": ["packages/i18n/generate/index.ts"],
      "@koine/node": ["packages/node/index.ts"],
      "@koine/node/*": ["packages/node/*"],
      "@koine/utils": ["packages/utils/index.ts"],
      "@koine/utils/*": ["packages/utils/*"]
    }
  },
  "files": [],
  "include": ["**/*.ts"],
  "exclude": ["**/*.spec.ts"]
}
