{
  "extends": "../../tsconfig.base.json",
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "types": ["node"],
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    // for @vercel/ncc:
    "rootDir": "../../",
    "baseUrl": "../../",
    "declaration": false
  },
  "files": [
    // for @vercel/ncc:
    "../i18n/typings.d.ts"
  ],
  "include": ["**/*.ts"],
  "exclude": ["**/*.spec.ts"]
}
