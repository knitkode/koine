{
  "name": "@koine/i18n-action",
  "version": "1.0.0",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "lint": "eslint .",
    "format": "prettier src/**/*.ts --write",
    "build": "ncc build src/index.ts -o dist --license licenses.txt --minify",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js"
  },
  "keywords": [
    "GitHub",
    "Actions"
  ],
  "dependencies": {
    "@actions/core": "^1.10.1",
    "glob": "^10.3.10",
    "prettier": "^3.1.1"
  },
  "devDependencies": {
    "@types/eslint": "^8.56.1",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.7",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "jest": {
    "preset": "ts-jest",
    "verbose": true,
    "clearMocks": true,
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**"
    ]
  }
}
