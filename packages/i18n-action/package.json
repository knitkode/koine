{
  "name": "@koine/i18n-action",
  "private": true,
  "type": "module",
  "scripts": {
    "_lint": "eslint .",
    "_format": "prettier src/**/*.ts --write",
    "_build": "ncc build src/index.ts -o dist --license licenses.txt --minify",
    "_test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "dummy": "echo ok",
    "build-ncc": "ncc build ./index.ts -o ../../actions/i18n --minify --no-cache --no-source-map-register --license licenses.txt",
    "_build-clean": "find ../../actions -name '*.index.js' -delete",
    "build": "pnpm build-ncc"
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@koine/i18n": "*",
    "glob": "^10.3.10",
    "prettier": "^3.1.1",
    "simple-git": "^3.22.0"
  },
  "devDependencies": {
    "@types/eslint": "^8.56.1",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.7",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  }
}
