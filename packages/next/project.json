{
  "name": "next",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/next",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx run next:build-esm",
          "pnpm dev postbuild next --ext --esm"
        ],
        "parallel": false
      }
    },
    "build-esm": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/next/esm",
        "tsConfig": "packages/next/tsconfig.lib.json",
        "main": "packages/next/index.ts",
        "assets": ["packages/next/*.md", "packages/next/**/*.d.ts"]
      }
    },
    "build-cjs": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/next/cjs",
        "tsConfig": "packages/next/tsconfig.lib-cjs.json",
        "main": "packages/next/index.ts"
      }
    },
    "build-swc": {
      "executor": "@nx/js:swc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/next",
        "tsConfig": "packages/next/tsconfig.lib.json",
        "main": "packages/next/index.ts",
        "assets": ["packages/next/*.md", "packages/next/**/*.d.ts"]
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "packages/next/**/*.{ts,tsx,js,jsx}",
          "packages/next/package.json"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/packages/next"],
      "options": {
        "jestConfig": "packages/next/jest.config.js",
        "passWithNoTests": true
      }
    }
  }
}
