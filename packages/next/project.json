{
  "name": "next",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/next",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/rollup:rollup",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/next",
        "tsConfig": "packages/next/tsconfig.lib.json",
        "project": "packages/next/package.json",
        "main": "packages/next/index.ts",
        "assets": [
          {
            "input": "packages/next",
            "glob": "/**/*.{md,d.ts}",
            "output": "./"
          }
        ],

        "generateExportsField": true,
        "skipTypeCheck": false,
        "external": "all",
        "format": ["cjs", "esm"],
        "compiler": "swc",
        "deleteOutputPath": true,
        "additionalEntryPoints": ["packages/next/{config,12}.ts"]
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "packages/next/**/*.{ts,tsx,js,jsx}",
          "packages/next/package.json"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/packages/next"],
      "options": {
        "jestConfig": "packages/next/jest.config.js",
        "passWithNoTests": true
      }
    }
  }
}
