{
  "root": "packages/next",
  "sourceRoot": "packages/next",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build-esm": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/next",
        "tsConfig": "packages/next/tsconfig.lib.json",
        "project": "packages/next/package.json",
        "main": "packages/next/index.ts",
        "buildableProjectDepsInPackageJsonType": "dependencies",
        "assets": ["packages/next/README.md", "packages/next/typings.d.ts"]
      }
    },
    "build-web": {
      "executor": "@nrwl/web:rollup",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/next",
        "tsConfig": "packages/next/tsconfig.lib.json",
        "project": "packages/next/package.json",
        "entryFile": "packages/next/index.ts",
        "format": ["umd"],
        "deleteOutputPath": false
      }
    },
    "pack": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": ["nx build-esm next", "nx build-web next"],
        "parallel": true
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/next/**/*.{ts,tsx,js,jsx}"]
      }
    }
  }
}
