{
  "name": "browser",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/browser",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx run browser:build-esm",
          "pnpm dev postbuild browser --ext --esm"
        ],
        "parallel": false
      }
    },
    "build-esm": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/browser/esm",
        "tsConfig": "packages/browser/tsconfig.lib.json",
        "main": "packages/browser/index.ts",
        "assets": ["packages/browser/*.md", "packages/browser/*.d.ts"]
      }
    },
    "build-cjs": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/browser/cjs",
        "tsConfig": "packages/browser/tsconfig.lib-cjs.json",
        "main": "packages/browser/index.ts"
      }
    },
    "build-swc": {
      "executor": "@nx/js:swc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/browser",
        "tsConfig": "packages/browser/tsconfig.lib.json",
        "main": "packages/browser/index.ts",
        "assets": ["packages/browser/*.md", "packages/browser/*.d.ts"]
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "packages/browser/**/*.ts",
          "packages/browser/package.json"
        ]
      }
    }
  }
}
