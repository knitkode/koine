{
  "name": "api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/api",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx run api:build-esm",
          "nx run api:build-cjs",
          "pnpm dev postbuild api --ext --esm --cjs"
        ],
        "parallel": false
      }
    },
    "build-esm": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/api/esm",
        "tsConfig": "packages/api/tsconfig.lib.json",
        "main": "packages/api/index.ts",
        "assets": ["packages/api/*.md", "packages/api/*.d.ts"]
      }
    },
    "build-cjs": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/api/cjs",
        "tsConfig": "packages/api/tsconfig.lib-cjs.json",
        "main": "packages/api/index.ts"
      }
    },
    "build-swc": {
      "executor": "@nx/js:swc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/api",
        "tsConfig": "packages/api/tsconfig.lib.json",
        "main": "packages/api/index.ts",
        "assets": ["packages/api/*.md", "packages/api/*.d.ts"]
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/api/**/*.ts"]
      }
    }
  }
}
