{
  "name": "i18n",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/i18n",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx run i18n:build-esm",
          "pnpm dev postbuild i18n --ext --esm"
        ],
        "parallel": false
      }
    },
    "build-esm": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/i18n/esm",
        "tsConfig": "packages/i18n/tsconfig.lib.json",
        "main": "packages/i18n/index.ts",
        "assets": ["packages/i18n/*.md", "packages/i18n/*.d.ts"]
      }
    },
    "build-cjs": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/i18n/cjs",
        "tsConfig": "packages/i18n/tsconfig.lib-cjs.json",
        "main": "packages/i18n/index.ts"
      }
    },
    "build-swc": {
      "executor": "@nx/js:swc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/i18n",
        "tsConfig": "packages/i18n/tsconfig.lib.json",
        "main": "packages/i18n/index.ts",
        "assets": ["packages/i18n/*.md", "packages/i18n/*.d.ts"]
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/i18n/**/*.ts"]
      }
    }
  }
}
