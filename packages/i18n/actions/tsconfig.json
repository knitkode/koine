{
  "extends": "../../../tsconfig.base.json",
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "outDir": "../../../dist/out-tsc",
    "types": ["node"],
    "target": "es2015",
    "module": "ES2015",
    "moduleResolution": "Bundler",
    // for @vercel/ncc:
    "jsx": "react-jsx",
    "verbatimModuleSyntax": false,
    "rootDir": "../../../",
    "baseUrl": "../../../"
  },
  "include": ["**/*.ts"],
  "exclude": ["**/*.spec.ts"]
}
