{
  "extends": ["../../.eslintrc.json"],
  "ignorePatterns": ["!**/*", "__mocks__/**/*.ts"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {}
    },
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "rules": {}
    },
    {
      "files": ["actions/**/*.ts", "__mocks__/**/*.ts", "__mocks__/**/*.tsx"],
      "rules": {
        "@nx/enforce-module-boundaries": "off"
      }
    }
  ]
}
